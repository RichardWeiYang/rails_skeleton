<%= simple_form_for @hobby do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :popular_time, :as => :string %>
<%= f.input :image, as: :file %>
<%= f.submit "Submit" %>
<% end %>

<script>
 $("#hobby_popular_time").datepicker({ format: "yyyy/mm/dd" });
 autosize($("#hobby_description"))
</script>

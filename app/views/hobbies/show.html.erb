<%= link_to("Edit", edit_hobby_path(@hobby)) %>

<h1> <%= @hobby.title %> </h1>
<div class="col-md-6">
    <% if @hobby.image.present? %>
      <%= image_tag(@hobby.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
</div>
